{
  "name": "boilerplate",
  "private": true,
  "packageManager": "pnpm@8.6.12",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "ts-node-dev": "^2.0.0",
    "turbo": "^1.13.0",
    "typescript": "^5.3.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:check": "turbo run lint --continue",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "db:generate": "turbo run generate --filter=@my/database",
    "db:push": "turbo run push --filter=@my/database",
    "db:migrate": "turbo run migrate --filter=@my/database",
    "db:studio": "turbo run studio --filter=@my/database",
    "db:seed": "turbo run seed --filter=@my/database",
    "db:reset": "turbo run reset --filter=@my/database",
    "db:deploy": "turbo run deploy --filter=@my/database",
    "install": "pnpm install",
    "setup": "pnpm install && pnpm db:generate",
    "reset": "pnpm clean && pnpm install && pnpm db:generate",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deps:check": "pnpm audit",
    "deps:update": "pnpm update -r"
  }
}
