# Database (shared across all apps)
DATABASE_URL="postgresql://username:password@localhost:5432/example_db"

# Shared Configuration
NODE_ENV=development

# Public API Configuration (bundled into client)
NEXT_PUBLIC_API_URL=http://localhost:4000

# Public App Configuration
NEXT_PUBLIC_APP_NAME=Enterprise App
NEXT_PUBLIC_APP_DESCRIPTION=Enterprise-level application

# Public Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false

# Public External Service Keys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_...

# API Server Configuration
PORT=4000
HOST=localhost

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-that-is-long-enough-for-security
JWT_REFRESH_SECRET=your-super-secret-refresh-key-that-is-long-enough-for-security
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/oauth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:4000/api/v1/auth/oauth/github/callback

# Stripe Configuration (optional for development)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Frontend URLs for Stripe redirects
FRONTEND_URL=http://localhost:3000

# External API Keys (server-side only)
SENDGRID_API_KEY=SG...
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret

# Notification Settings
ADMIN_EMAIL=admin@yourcompany.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
EMAIL_PROVIDER=resend # or 'sendgrid'
EMAIL_FROM=no-reply@yourcompany.com
RESEND_API_KEY=re_...
SENDGRID_API_KEY=SG...

# Email Service Configuration (choose one)
# Resend (recommended)
RESEND_API_KEY=re_...

# Nodemailer SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Security Configuration
SESSION_SECRET=your-super-secret-session-key-here
CSRF_SECRET=your-super-secret-csrf-key-here
API_KEY=your-optional-api-key-for-premium-features

# API Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_API_LOGGING=true
ENABLE_SWAGGER_DOCS=true
ENABLE_IP_FILTERING=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com